# Environment Variables Example
# Copy this to .env for local development

# Temporal Server Connection (set by docker-compose)
# TEMPORAL_ADDRESS is set automatically by docker-compose to temporal-server:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=awesomeapps-tasks

# Worker Configuration
WORKER_CONCURRENCY=10
MAX_CONCURRENT_ACTIVITIES=10

# Application
NODE_ENV=development
PORT=8080

# Strapi API
STRAPI_API_URL=https://awesomeapps-strapi.meimberg.io/api
STRAPI_GRAPHQL_URL=https://awesomeapps-strapi.meimberg.io/graphql
STRAPI_API_TOKEN=your-strapi-api-token

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Google Gemini API
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key

# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key

# Microsoft To Do API (OAuth credentials)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
MICROSOFT_TODO_REFRESH_TOKEN=your-microsoft-todo-refresh-token
# Optional: pre-generated access token used until first refresh
MICROSOFT_TODO_ACCESS_TOKEN=
# Default list to process (used if workflow input omits taskListId)
MICROSOFT_TODO_LIST_ID=your-default-task-list-id

# Translation Workflow
TRANSLATION_WORKFLOW_ID=UxndSFHh7ve4DPto

